{% extends "base.njk" %}
{% block content %}
  <article class="content" data-type="book">
    <h1 class="page-heading">{{ title }}</h1>
    <div class="content-inner flow">
      <div class="post-metadata">
        <time datetime="{{ date | w3DateFilter }}">{{ date | dateFilter }}</time>
        {% if tags %}
          <div class="tags">
            <span id="tags-desc">Tags:</span>
            <ul class="" aria-describedby="tags-desc">
              {% for tag in tags %}
                <li>
                  <a href="/tag/{{ tag | slugify }}/">{{ tag }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </div>
      <div class="two-col">
        <div class="flow">
      {{ content | safe }}
      <p>Buy it: <a href="{{ url }}" target="_blank" rel="noreferrer">{{book}}</a>
      </div>
      <img src="/img/blog/{{ image}}" alt="{{alt}}"/>
      </div>
      {% include 'partials/webmentions.njk' %}
    </div>
  </article>
{% endblock %}