---
eleventyImport:
  collections: ["blog"]
---

{% extends "base.njk" %}
{% block content %}
  {% set postListItems = pagination.items %}
  {% if tag %}
    {% set postListItems = collections[tag] | reverse %}
  {% endif %}
  <div class="list-heading">
    <h1>{{ title }}</h1>
  </div>
  <div
    class="content-inner flow" {% if subtitle %} data-with-subtitle {% endif %}>
    <ol role="list" class="posts-list flow">
      {% for item in postListItems %}
        {% set excerpt %}
        {% if item.data.excerptText %}
          {{ item.data.excerptText | markdown | trim | safe }}
        {% elseif item.data.page.excerpt %}
          {{ item.data.page.excerpt | markdown | trim | safe }}
        {% endif %}
        {% endset %}
        <li>
          <article class="content summary" data-type="{{item.data.type}}">
            <h2 class="page-heading">
              <a href="{{ item.url }}">{{ item.data.title }}</a>
              {% if item.data.subtitle %}
                <span class="post-subtitle">{{ item.data.subtitle }}</span>
              {% endif %}
            </h2>
            <div class="content-inner flow">
              {{ excerpt | safe }}
              <p>
                <time class="post-date" datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
                &ndash;
                <a class="read-more-link" href="{{ item.url }}">Continue reading
                  <span aria-hidden="true">â†’</span>
                </a>
              </p>
            </div>
          </article>
        </li>
      {% endfor %}
    </ol>
      <div class="filters">
  <h2 id='quick-filters'>Filters:</h2>
  <ul class="" aria-labelledby="quick-filters">
    {% if collections["good book"].length > 0 %}
    <li><a href="/tag/good-book/">books</a></li>
    {% endif %}
    {% if collections["good podcast"].length > 0 %}
    <li><a href="/tag/good-podcast/">podcasts</a></li>
    {% endif %}
    {% if collections["good music"].length > 0 %}
    <li><a href="/tag/good-music/">music</a></li>
    {% endif %}
    {% if collections["good video"].length > 0 %}
    <li><a href="/tag/good-video/">videos</a></li>
    {% endif %}
    {% if collections["good recipe"].length > 0 %}
    <li><a href="/tag/good-recipe/">recipes</a></li>
    {% endif %}
    {% if tag %}
    <li><a href="/blog">all posts</a></li>
    {% endif %}
    <li><a href="/tags">all tags</a></li>
  </ul>
  </div>
    {% if not tag %}
      {% include "partials/blog/pagination.njk" %}
    {% endif %}
  </div>
{% endblock %}