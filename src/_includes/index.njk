{% extends "base.njk" %}
{% block content %}
  <div id="homepage-content" class="content">
    <h1 id="homepage-heading" class="page-heading">Hi, I'm Sophie.</h1>
    <div id="content-start"></div>
    <div class="content-inner flow">
      {{ content | safe }}
      <h2>
        Recent posts
      </h2>
      <ol role="list" class="recent-posts">
        {% set postListItems = collections.blog | head (3) %}
        {% for item in postListItems %}
          <li>
            <article class="summary">
              <a href="{{ item.url }}">{{ item.data.title }}</a>
            </article>
          </li>
        {% endfor %}
      </ol>
    </div>
    <div id="content-end"></div>
    <div class="buttons flow">
      {% include "partials/neocities-badge.njk" %}
      <p aria-label="Yesterweb Webring">
        <a title="random" href="https://webring.yesterweb.org/noJS/index.php?d=rand&url=https://localghost.dev">
          ???
        </a>
        &nbsp;
        <span aria-hidden>//</a>
        <a title="previous" href="https://webring.yesterweb.org/noJS/index.php?d=prev&url=https://localghost.dev">
          &lt;&lt;
        </a>
        &nbsp;
        <a href="https://yesterweb.org/webring">yesterweb</a>
        <a title="next" href="https://webring.yesterweb.org/noJS/index.php?d=next&url=https://localghost.dev">
          &gt;&gt;
        </a>
        &nbsp;
        <span aria-hidden>//</a>
        <a title="random" href="https://yesterweb.org/webring/members.html">
          ..
        </a>
      </p>
      <p>
        <a title="previous" href="https://hotlinewebring.club/localghost/previous">
          &lt;&lt;
        </a>&nbsp;
        <a href="https://hotlinewebring.club/">HOTLINE WEBRING</a>&nbsp;
        <a href="https://hotlinewebring.club/localghost/next" title="next">
          &gt;&gt;
        </a>
      </p>
    </div>
  </div>
{% endblock %}